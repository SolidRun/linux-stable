/dts-v1/;

#include "imx8mm.dtsi"

/ {
	model = "SolidRun i.MX8MM HummingBoard Pulse";
	compatible = "solidrun,hummingboard-pulse", "fsl,imx8mm";

	chosen {
		stdout-path = &uart2;
	};

	micro_hdmi: micro-hdmi {
		compatible = "hdmi-connector";
		type = "d";

		port@0 {
			micro_hdmi_in: endpoint {
				remote-endpoint = <&adv_bridge_out>;
			};
		};
	};

	pcie0_refclk: pcie0-refclk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <100000000>;
	};

	reg_usdhc1_vmmc: regulator-usdhc1-vmmc {
		compatible = "regulator-fixed";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_usdhc1_vmmc>;
		regulator-name = "usdhc1-vmmc";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		gpio = <&gpio2 10 GPIO_ACTIVE_LOW>;
		startup-delay-us = <100>;
		off-on-delay = <20000>;
	};

	reg_usdhc2_vmmc: regulator-usdhc2-vmmc {
		compatible = "regulator-fixed";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_usdhc2_vmmc>;
		regulator-name = "usdhc2-vmmc";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		gpio = <&gpio2 19 GPIO_ACTIVE_LOW>;
		off-on-delay = <20000>;
	};

	reg_usb_host1_vbus: reg-usb-host1-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb-host1-vbus";
		gpio = <&gpio2 11 GPIO_ACTIVE_HIGH>;
		enable-active-high;
		regulator-boot-on;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_usb_host1_vbus>;
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	reg_usb1_vbus: reg-usb1-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb1-vbus";
		gpio = <&gpio4 21 GPIO_ACTIVE_HIGH>;
		enable-active-high;
		regulator-boot-on;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_usb1_vbus>;
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		rpmsg_reserved: rpmsg@0xb8000000 {
			no-map;
			reg = <0 0xb8000000 0 0x400000>;
		};
	};

	sound-wm8904 {
		compatible = "simple-audio-card";
		simple-audio-card,name = "wm8904-audio";
		simple-audio-card,format = "i2s";
		simple-audio-card,frame-master = <&sound_wm8904_cpu>;
		simple-audio-card,bitclock-master = <&sound_wm8904_cpu>;
		simple-audio-card,widgets =
			"Headphone", "Headphone Jack",
			"Microphone", "Headphone Jack";
		simple-audio-card,routing =
			"Headphone Jack", "HPOUTL",
			"Headphone Jack", "HPOUTR",
			"Headphone Jack", "MICBIAS",
			"IN2R", "Headphone Jack";

		sound_wm8904_cpu: simple-audio-card,cpu {
			sound-dai = <&sai2>;
			dai-tdm-slot-num = <2>;
			dai-tdm-slot-width = <16>;
		};

		sound_wm8904_codec: simple-audio-card,codec {
			sound-dai = <&wm8904>;
		};
	};
};

&iomuxc {
	pinctrl_wdog: wdoggrp {
		fsl,pins = <
			MX8MM_IOMUXC_GPIO1_IO02_WDOG1_WDOG_B		0xc6
		>;
	};

	pinctrl_uart1: uart1grp {
		fsl,pins = <
			MX8MM_IOMUXC_UART1_RXD_UART1_DCE_RX	0x140
			MX8MM_IOMUXC_UART1_TXD_UART1_DCE_TX	0x140
