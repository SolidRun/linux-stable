&i2c2 {
	clock-frequency = <400000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	status = "okay";

	wm8904: codec@1a {
		#sound-dai-cells = <0>;
		compatible = "cirrus,wm8904", "wlf,wm8904";
		reg = <0x1a>;
		clocks = <&clk IMX8MM_CLK_SAI2_ROOT>;
		clock-names = "mclk";
		status = "okay";
	};

	usb_hub@58 {
		compatible = "cypress,cyusb3304";
		reg = <0x58>;
	};
};

&i2c3 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c3>;
	status = "okay";

	adv_bridge: adv7535@39 {
		compatible = "adi,adv7535";
		reg = <0x39>;
		adi,addr-cec = <0x3c>;
		adi,dsi-lanes = <4>;
		adi,addr-edid = <0x3b>;
		pinctrl-0 = <&pinctrl_i2c3_dsi_ts_int>;
		interrupt-parent = <&gpio1>;
		interrupts = <7 IRQ_TYPE_LEVEL_LOW>;
		status = "okay";

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				adv_bridge_in: endpoint {
					remote-endpoint = <&mipi_dsi_out>;
				};
			};

			port@1 {
				reg = <1>;
				adv_bridge_out: endpoint {
					remote-endpoint = <&micro_hdmi_in>;
				};
			};
		};
	};

	eeprom@57 {
		compatible = "microchip,24c02", "atmel,24c02";
		reg = <0x57>;
		pagesize = <16>;
	};

	rtc: am1805aq@69 {
		compatible = "abracon,ab1805";
		reg = <0x69>;
		abracon,tc-diode = "schottky";
		abracon,tc-resistor = <3>;
	};
};

&flexspi {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_flexspi0>;
	status = "okay";

	nor@0 {
		compatible = "micron,mt25qu256aba";
		reg = <0>;
		#address-cells = <1>;
		#size-cells = <1>;
		spi-max-frequency = <80000000>;
		spi-nor,ddr-quad-read-dummy = <6>;
	};
};

&gpu {
	status = "okay";
};

&lcdif {
	status = "okay";
	//max-memory-bandwidth = <187500000>; /* 1.5Gbps in Bps, according to Reference Manual */
};

&lcdif_to_dsim {
	remote-endpoint = <&mipi_dsi_in>;
};

&mipi_dsi {
	status = "okay";

	/delete-node/ port@0;
	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			mipi_dsi_in: endpoint {
				remote-endpoint = <&lcdif_to_dsim>;
			};
		};

		port@1 {
			reg = <1>;
			mipi_dsi_out: endpoint {
				remote-endpoint = <&adv_bridge_in>;
				attach-bridge;
			};
		};
	};
};

/* connected to on-Carrier i210 ethernet controller */
&pcie0 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pcie0>;
	disable-gpio = <&gpio1 5 GPIO_ACTIVE_LOW>;
	reset-gpio = <&gpio1 15 GPIO_ACTIVE_LOW>;
	clocks = <&clk IMX8MM_CLK_PCIE1_ROOT>,
		 <&clk IMX8MM_CLK_PCIE1_AUX>,
		 <&clk IMX8MM_CLK_PCIE1_PHY>,
		 <&pcie0_refclk>;
	clock-names = "pcie", "pcie_aux", "pcie_phy", "pcie_bus";
	reserved-region = <&rpmsg_reserved>;
	ext_osc = <0>;
	hard-wired = <1>;
	status = "okay";
};

&vpu_g1 {
	status = "okay";
};

&vpu_g2 {
	status = "okay";
};

&vpu_h1 {
	status = "okay";
};
