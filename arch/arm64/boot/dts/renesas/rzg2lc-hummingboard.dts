// };

&usb0_vbus_otg {
	gpio = <&pinctrl RZG2L_GPIO(4, 0) GPIO_ACTIVE_HIGH>;
	gpio-open-drain;
};

&usb1_vbus {
	gpio = <&pinctrl RZG2L_GPIO(5, 0) GPIO_ACTIVE_HIGH>;
	gpio-open-drain;
};

